{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": false,
        "strictFunctionTypes": true,
        "declaration": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "removeComments": false,
        "types": ["node"],
        "esModuleInterop": true,
        "noEmit": false,
        "outDir": "./src/js",
        "sourceMap": false,
        "incremental": true,
        "declarationMap": false,
        "composite": false,
        "noUnusedLocals": false,
        "isolatedModules": false
    },
    "files": ["./src/flow.ts"],
    "exclude": [
        "node_modules",
        "./src/js/**",
        "./build.ts"
    ]
}
