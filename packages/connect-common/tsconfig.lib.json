{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./lib",
        "strict": true,
        "declaration": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,
        "types": ["node"]
    },
    "include": ["./src/index.ts"],
    "exclude": ["node_modules", "**/tests/**", "**/fixtures/**", "**/*.test.ts"]
}
